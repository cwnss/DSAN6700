{
  "id": null,
  "uid": "api-metrics",
  "title": "API Metrics",
  "tags": ["api"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Total Requests by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total) by (handler)",
          "legendFormat": "{{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Avg Request Duration by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_request_duration_seconds_sum) by (handler) / sum(http_request_duration_seconds_count) by (handler)",
          "legendFormat": "{{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "/wardrobe/upload - Count & Avg Duration",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total{handler=\"/wardrobe/upload\"})",
          "legendFormat": "Total Calls",
          "refId": "A"
        },
        {
          "expr": "sum(http_request_duration_seconds_sum{handler=\"/wardrobe/upload\"}) / sum(http_request_duration_seconds_count{handler=\"/wardrobe/upload\"})",
          "legendFormat": "Avg Duration",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "/predict - Count & Avg Duration",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total{handler=\"/predict\"})",
          "legendFormat": "Total Calls",
          "refId": "A"
        },
        {
          "expr": "sum(http_request_duration_seconds_sum{handler=\"/predict\"}) / sum(http_request_duration_seconds_count{handler=\"/predict\"})",
          "legendFormat": "Avg Duration",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "/outfits/generate - Count & Avg Duration",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total{handler=\"/outfits/generate\"})",
          "legendFormat": "Total Calls",
          "refId": "A"
        },
        {
          "expr": "sum(http_request_duration_seconds_sum{handler=\"/outfits/generate\"}) / sum(http_request_duration_seconds_count{handler=\"/outfits/generate\"})",
          "legendFormat": "Avg Duration",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      }
    },
    {
      "id": 6,
      "title": "Total Requests (All Endpoints)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      }
    },
    {
      "id": 7,
      "title": "Total 5xx Errors",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(http_requests_total{status=~\"5..\"}) or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    }
